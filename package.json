{
  "name": "ace-experience",
  "version": "0.1.0",
  "description": "A stage-driven, context-engineered agentic code execution system for Claude Code, OpenCode, and Gemini.",
  "bin": {
    "ace-experience": "bin/install.js"
  },
  "files": [
    "bin",
    "commands",
    "ace",
    "agents",
    "hooks/dist"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "agentic",
    "context-engineering",
    "code-execution",
    "gemini",
    "gemini-cli"
  ],
  "author": "Ash",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AshExplained/ace-agentic-code-experience.git"
  },
  "homepage": "https://github.com/AshExplained/ace-agentic-code-experience",
  "bugs": {
    "url": "https://github.com/AshExplained/ace-agentic-code-experience/issues"
  },
  "engines": {
    "node": ">=16.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "commands/*.md": [
      "node scripts/validate-markdown.js"
    ],
    "agents/*.md": [
      "node scripts/validate-markdown.js"
    ],
    "ace/workflows/*.md": [
      "node scripts/validate-markdown.js"
    ],
    "ace/references/*.md": [
      "node scripts/validate-markdown.js"
    ],
    "ace/templates/**/*.md": [
      "node scripts/validate-markdown.js"
    ],
    "hooks/ace-*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "build:hooks": "node scripts/build-hooks.js",
    "prepublishOnly": "npm run build:hooks",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "node scripts/validate-markdown.js",
    "validate:dist": "node scripts/check-dist-sync.js",
    "test": "echo \"No tests yet\" && exit 0",
    "check": "npm run lint && npm run format:check && npm run validate && npm run validate:dist"
  }
}
